<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anonymous.achats.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E90FF"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/bangers"
                android:text="Achats"
                android:textColor="#000"
                android:textSize="30sp" />

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#ffff"
                android:queryHint="Search for Products">

            </SearchView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                style="@style/general"
                android:background="@drawable/mobile" />

            <ImageView
                style="@style/general"
                android:background="@drawable/shirts" />

            <ImageView
                style="@style/general"
                android:background="@drawable/coffeemaker" />

            <ImageView
                style="@style/general"
                android:background="@drawable/furniture" />

            <ImageView
                style="@style/general"
                android:background="@drawable/books" />

            <ImageView
                style="@style/general"
                android:background="@drawable/electronic" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/offer2" />

                <ImageView
                    android:layout_width="370dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                   android:background="@drawable/offer" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>